<Application x:Class="IPCamera.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IPCamera"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>

        <BitmapImage x:Key="up_img"           UriSource="up.png"    />
        <BitmapImage x:Key="left_img"         UriSource="left.png"  />
        <BitmapImage x:Key="right_img"        UriSource="right.png" />
        <BitmapImage x:Key="down_img"         UriSource="down.png"  />
        <BitmapImage x:Key="take_pic_img"     UriSource="pic.jpg"   />
        <BitmapImage x:Key="start_recording_button_img"  UriSource="start-recording.png" />
        <BitmapImage x:Key="stop_recording_button_img"  UriSource="stop-recording.jpg" />

    </Application.Resources>
    
</Application>
